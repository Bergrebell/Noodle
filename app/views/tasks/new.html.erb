<%= form_for :task, url: tasks_path do |f| %>
    <p>
      <%= f.label :title, "Titel" %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text, "Beschreibung" %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit "Noodle erstellen" %>
    </p>
<% end %>