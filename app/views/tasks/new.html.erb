<div id="createNoodle" class="view">

  <h2>Create Noodle</h2>

  <div class="inputform">
    <%= form_for :task, url: tasks_path do |f| %>

        <% if @task.errors.any? %>
            <div class="error_messages">
              <% for message in @task.errors.full_messages %>
                <p><%= message %></p>
              <% end %>
            </div>
        <% end %>



        <p>
          <%= f.text_field :title, :placeholder => "Title" %>
        </p>

        <p>
          <%= f.text_area :text, :placeholder => "Description" %>
        </p>
        <p>
          <%= f.text_field :user_id, :class => "id_hide", :value => current_user.id %>
        </p>
        <p>
          <%= f.submit "Create", :class => "buttoninput buttonshadow"%>
        </p>
    <% end %>
  </div>
</div>



