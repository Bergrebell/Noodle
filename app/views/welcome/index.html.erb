<% if current_user %>
    <div class="flashmsg">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
    </div>
<% end %>

<% if not current_user %>
    <h1 id="welcome">Welcome to the Noodle Project</h1>
<% end %>

<div id="penlong">
    <%= image_tag("penlong.png",  height: 500) %>
</div>

<% if not current_user %>
    <%= link_to signup_path do %>    
        <div class="buttonhome" id="signupbutton">
            Sign up
        </div>
    <% end %>
    
    <%= link_to login_path do%>
        <div class="buttonhome" id="loginbutton">
            Login
        </div>
    <% end %>
<% else %>
    <%= link_to new_task_path do%>
        <div class="buttonhome" id="noodlen">
            Noodle erstellen
        </div>
    <% end %>
<% end %>
